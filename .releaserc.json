{
  "branches": ["main", "master", "add-ci"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "semantic-release-helm3",
      {
        "chartPath": "helm/redisinsight",
        "onlyUpdateVersion": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "mkdir -p helm/charts && mv *.tgz helm/charts/ && helm repo index helm/charts --url https://github.com/${process.env.GITHUB_REPOSITORY}/raw/main/helm/charts"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "helm/redisinsight/Chart.yaml", "helm/charts/*"],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}