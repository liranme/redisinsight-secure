{
  "branches": ["main", "master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i \"s/^version:.*/version: ${nextRelease.version}/\" helm/redisinsight/Chart.yaml",
        "publishCmd": "helm package helm/redisinsight && mkdir -p helm/charts && mv redisinsight-${nextRelease.version}.tgz helm/charts/ && helm repo index helm/charts --url https://github.com/${process.env.GITHUB_REPOSITORY}/raw/main/helm/charts"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "helm/redisinsight/Chart.yaml", "helm/charts/*"],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}